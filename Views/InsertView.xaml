<UserControl x:Class="CentralAptitudeTest.Views.InsertView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock 
            Grid.Row="0"
            Padding="15" 
            Text="엑셀 파일을 입력해 주세요." 
            FontSize="50"/>

        <Label Grid.Row="1" Content="단과대학 : " Margin="200,0,0,0"/>
        <TextBox Name="college" Grid.Row="1"  Height="20" Width="200" HorizontalAlignment="Center" Margin="200,0,0,0"/>
        <Label Grid.Row="2" Content="학과명 : " Margin="200,0,0,0"/>
        <TextBox Name="subject" Grid.Row="2"  Height="20" Width="200" HorizontalAlignment="Center" Margin="200,0,0,0"/>

        <Button Name="OpenFileButton"
                Grid.Row="3"
                Width="100"
                Height="30"
                Background="#FF0F427A"
                Foreground="White"
                VerticalAlignment="Center"
                Content="OpenFile" Margin="400,0,0,0" Click="OpenFileButton_Click"/>
        <TextBox Name="myTextBox"
                 Height="30"
                 Width="450"
                 Grid.Row="3" Margin="20,0,170,0" />
    </Grid>
</UserControl>
