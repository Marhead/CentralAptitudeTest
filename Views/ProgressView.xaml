<UserControl x:Class="CentralAptitudeTest.Views.ProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CentralAptitudeTest.Views"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:models="clr-namespace:CentralAptitudeTest.ViewModels"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock 
            Grid.Row="0"
            Padding="15" 
            Text="데이터 가공 중..." 
            FontSize="50"/>

        <dxe:ProgressBarEdit Width="500" Height="20" Value="34"/>

        <TextBlock
            Name="TextBlock"
            Text="{Binding Path=FilePath}"
            Grid.Row="1"
            Foreground="Black"
            Padding="15" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" />

    </Grid>
</UserControl>
